<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head.ejs',{ pageName:  "All Tutorials" }) %>
    
<body>
    <% if(user) { %>
        <%- include('../partials/nav.ejs',{ user:  user.username }) %>
    <% } else { %>
        <%- include('../partials/nav.ejs',{ user:  '' }) %>
    <% } %>



    <section>
        <div>
            <h1 class="title">All Tutorials</h2>
        </div>
    </section>

    <main class="container">
        <div>
            <div>
                <% for(let idx=0; idx < tutorials.length; idx++){ %>
                    <% const tutorial=tutorials[idx] %>
                        <div>
                            <a href="/tutorials/<%= tutorial._id %>"><h1><%= tutorial.title %></h1>
                            <img class="card-image" src="<%= tutorial.thumbnail %>" alt="<%= tutorial.title %>" />
                            <div class>
                            <p><%= tutorial.author %></p></a>
                        <% if(user && user.id == tutorial.user._id) { %>
                                <form method="POST" action="/tutorials/<%= tutorial._id %>?_method=DELETE">            <!-- "/products/0?_method=DELETE" -->
                                    <input type="submit" value="Delete Tutorial"/>
                                </form>
                                <hr />
                            </div>
                        <% } %>
                <% } %>
            </div>
        </div>
    </main>
    <% for(let i = 0; i < 40; i++) { %>
        <br/>
    <% } %>
</body>
</html>